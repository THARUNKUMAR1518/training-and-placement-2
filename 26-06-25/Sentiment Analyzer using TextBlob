from textblob import TextBlob

text = input("Enter a sentence: ")
blob = TextBlob(text)

if blob.sentiment.polarity > 0:
    print("ğŸ˜Š Positive Sentiment")
elif blob.sentiment.polarity < 0:
    print("ğŸ˜ Negative Sentiment")
else:
    print("ğŸ˜ Neutral Sentiment")

Sample Input:
