def chatbot():
    while True:
        msg = input("You: ")
        if "hello" in msg.lower():
            print("Bot: Hello! How can I help?")
        elif "bye" in msg.lower():
            print("Bot: Goodbye!")
            break
        else:
            print("Bot: I didn't understand.")

chatbot()
Output:
You: hello
Bot: Hello! How can I help?
You: bye
Bot: Goodbye!
